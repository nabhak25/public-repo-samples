<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <CheckBox android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/plain_pizza"
              android:layout_marginTop="236dp"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/plainCheck" app:layout_constraintStart_toStartOf="@+id/chickenCheck"
              app:layout_constraintEnd_toEndOf="@+id/chickenCheck"/>

    <CheckBox android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/chicken_pizza"
              android:layout_marginTop="48dp"
              app:layout_constraintTop_toBottomOf="@+id/plainCheck"
              android:id="@+id/chickenCheck" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/veg_pizza" android:layout_marginTop="48dp"
              app:layout_constraintTop_toBottomOf="@+id/chickenCheck" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.006"
              app:layout_constraintStart_toStartOf="@+id/chickenCheck"
              app:layout_constraintEnd_toEndOf="@+id/chickenCheck"
              app:layout_constraintHorizontal_bias="0.461"
              android:id="@+id/vegCheck"/>

</android.support.constraint.ConstraintLayout>