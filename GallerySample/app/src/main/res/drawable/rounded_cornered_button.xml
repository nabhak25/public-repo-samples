<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF7043" />
            <gradient android:angle="-90" android:startColor="#FF3D00" android:endColor="#FF7043"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF7043" />
            <solid android:color="#FF3D00"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF7043" />
            <gradient android:angle="-90" android:startColor="#FF6E40" android:endColor="#FF3D00" />
        </shape>
    </item>
</selector>